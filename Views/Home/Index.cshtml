@model IEnumerable<ShopLineWebApplication.Models.Category>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row row-cols-1 g-4">
        @foreach (var category in Model)
        {
            <div class="col">
                <div class="list-group">
                    <div class="list-group-item">
                        <a asp-controller="Products" asp-action="Index" asp-route-point="@category.Slug">@category.Name</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>