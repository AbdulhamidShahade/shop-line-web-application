@model ShopLineWebApplication.Models.Product


<div class="container">
    <div class="row">
        <div class="col">
            <h2>@Model.Title</h2>
            <p>@Model.Description</p>
        </div>
    </div>

    <div class="row mt-4">

        <div class="col-md-6">
            <ul class="list-group">
                <li class="list-group-item"><strong>Category:</strong> @Model.Category</li>
                <li class="list-group-item"><strong>Price:</strong> $@Model.Price</li>
                <li class="list-group-item"><strong>Discount:</strong> @Model.DiscountPercentage% off</li>
                <li class="list-group-item"><strong>Rating:</strong> @Model.Rating</li>
                <li class="list-group-item"><strong>Stock:</strong> @Model.Stock</li>
                <li class="list-group-item"><strong>Brand:</strong> @Model.Brand</li>
                <li class="list-group-item"><strong>SKU:</strong> @Model.Sku</li>
                <li class="list-group-item"><strong>Weight:</strong> @Model.Weight lbs</li>
                <li class="list-group-item">
                    <strong>Dimensions:</strong>
                    <ul>
                        <li><strong>Width:</strong> @Model.Dimensions.Width</li>
                        <li><strong>Height:</strong> @Model.Dimensions.Height</li>
                        <li><strong>Depth:</strong> @Model.Dimensions.Depth</li>
                    </ul>
                </li>
                <li class="list-group-item"><strong>Warranty Information:</strong> @Model.WarrantyInformation</li>
                <li class="list-group-item"><strong>Shipping Information:</strong> @Model.ShippingInformation</li>
                <li class="list-group-item"><strong>Availability:</strong> @Model.AvailabilityStatus</li>
                <li class="list-group-item"><strong>Return Policy:</strong> @Model.ReturnPolicy</li>
                <li class="list-group-item"><strong>Minimum Order Quantity:</strong> @Model.MinimumOrderQuantity</li>
            </ul>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col">
            <h3>Reviews</h3>
            <div class="list-group">
                @foreach (var review in Model.Reviews)
                {
                    <div class="list-group-item">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">@review.ReviewerName</h5>
                            <small>@review.Date.ToString("yyyy-MM-dd")</small>
                        </div>
                        <p class="mb-1">Rating: @review.Rating</p>
                        <p class="mb-1">@review.Comment</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
